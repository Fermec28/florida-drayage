<!DOCTYPE html>
<html>
  <head>
    <title> Drayage Florida</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-147783861-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-147783861-1');
    </script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Carme' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="minimum-scale=1, initial-scale=1">
    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body>
    <%= render "layouts/nav" %>
    <div class="body-container">
      <div class= "cont-flash-messages">
        <% flash.each do |key, value| %>
          <% if value.is_a?(Array) %>
            <% value.each do |element|%>
              <div class="alert alert-<%= key %> alert-dismissible" style= "z-index: 1040;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= element %>
              </div>
            <% end %>
          <% else %>
            <% key = key == 'notice'? 'info' : key %>
            <% key = key == 'alert'? 'warning' : key %>
            <div class="alert alert-<%= key %>" style= "z-index: 1040;">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= value %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
      <%= yield %>
    <% if(  user_signed_in?)%>
      <script >
        plantApp()
      </script>
    <%end %>
    <div onclick="hideShow()" class="overlay"></div>
    <%= render "layouts/footer" %>

  </body>
</html>
