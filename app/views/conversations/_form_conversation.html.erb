<%= form_for @conversation, html:{id: "create-conversation"},remote:true do |f| %>

<div class="form-group">
	<%= f.label "Nombre" %>
   <%= f.text_field :name, class: "form-control"%>
</div>

<div class="form-group">
	<%= f.label "Email:" %>
    <%= f.text_field :mail, class: "form-control"%>
</div>
	<%= f.submit%>
<% end %> 
