<%= form_for [@conversation,@message]   do |f| %>

<div class="chat-footer d-flex flex-row">
	<div class="form-cont ">
		<div class="form-group col-11">
		    <%= f.text_area :body, class: "form-control user-txt-area", placeholder: "Write your text here"%>
		</div>
	</div>
	<div class="send-cont row col-3">
		<!-- <%= f.submit 'Send', class: "btn-send" %> -->
		<%= f.button :submit ,id:"conversation-button",class: "btn-send" do %>
			<i class="material-icons send" style="font-size: 20px;">send</i>
		<% end %>
	</div>
</div
<% end %>

<script >
	$('#message_body').keypress(function (e) {
  if (e.which == 13) {
  	e.preventDefault()
    $("#conversation-button").click()
  }
});
</script>