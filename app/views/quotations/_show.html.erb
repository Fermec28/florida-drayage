<!-- Render show  to ajax request-->
<div id="accordion">
  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          <strong>New Quote </strong>
        </button>
        <span><%= @quotation.email%><span>
      </h5>

    </div>
    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body">
        <h4>New Quote</h4>
        <%= render partial: "/quotations/quotation_header.html.erb"%>
        <%= render partial: "/invoices/form_invoice_remote",locals:{quotation: @quotation, invoice: @invoice}%>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          <strong>Invoices</strong>
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body">        
      	<ul class="collection" id="invoices-container">
	        <% @invoices.each do |_invoice|%>
						<%if _invoice.id%> 		
							<%= render partial: "/invoices/invoice_item",locals:{quotation:@quotation,_invoice:_invoice} %>              
						<% end %> 
					<% end%>
				</ul>
      </div>
    </div>
  </div>
</div>

